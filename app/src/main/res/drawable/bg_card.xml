<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Hintergrundfarbe -->
    <solid android:color="@color/colorSurface" />

    <!-- Abgerundete Ecken -->
    <corners android:radius="8dp" />

    <!-- Rand (optional, kannst du weglassen) -->
    <stroke
        android:width="1dp"
        android:color="@color/colorSecondaryVariant" />

    <!-- Schatten simulieren -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
